<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/item_point_of_interest_to_add_imageview_delete"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_baseline_delete_24" />

    <TextView
        android:id="@+id/item_point_of_interest_to_add_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/activity_add_property_item_point_of_interest_example"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/item_point_of_interest_to_add_imageview_delete"
        app:layout_constraintTop_toTopOf="@+id/item_point_of_interest_to_add_imageview_delete"
        app:layout_constraintBottom_toBottomOf="@+id/item_point_of_interest_to_add_imageview_delete" />

</androidx.constraintlayout.widget.ConstraintLayout>