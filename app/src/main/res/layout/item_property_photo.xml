<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/item_property_photo_picture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/item_property_photo_description"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="TEST"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginEnd="8dp"
        android:background="@color/item_photo_description_background"
        app:layout_constraintBottom_toBottomOf="@+id/item_property_photo_picture"
        app:layout_constraintStart_toStartOf="@+id/item_property_photo_picture"
        app:layout_constraintEnd_toEndOf="@+id/item_property_photo_picture" />

</androidx.constraintlayout.widget.ConstraintLayout>